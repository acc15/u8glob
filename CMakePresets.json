{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 29,
        "patch": 3
    },
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "multi",
            "inherits": "default",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/multi",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        },
        {
            "name": "vs64",
            "inherits": "default",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "binaryDir": "${sourceDir}/build/vs64",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "multi-debug",
            "configurePreset": "multi",
            "configuration": "Debug"
        },
        {
            "name": "multi-release",
            "configurePreset": "multi",
            "configuration": "Release"
        },
        {
            "name": "vs64-debug",
            "configurePreset": "vs64",
            "configuration": "Debug"
        },
        {
            "name": "vs64-release",
            "configurePreset": "vs64",
            "configuration": "Release"
        }
    ],
    "workflowPresets": [
        {
            "name": "multi",
            "steps": [
                {
                    "type": "configure",
                    "name": "multi"
                },
                {
                    "type": "build",
                    "name": "multi-debug"
                },
                {
                    "type": "build",
                    "name": "multi-release"
                }
            ]
        },
        {
            "name": "vs64",
            "steps": [
                {
                    "type": "configure",
                    "name": "vs64"
                },
                {
                    "type": "build",
                    "name": "vs64-debug"
                },
                {
                    "type": "build",
                    "name": "vs64-release"
                }
            ]
        }
    ]
}